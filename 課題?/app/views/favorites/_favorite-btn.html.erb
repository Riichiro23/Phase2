<% if book.favorited_by?(current_user) %>
    <!--favorites#destroy--><!--いいねの取り消しを非同期通信-->
  <%=link_to book.favorites.count, book_favorites_path(book), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
    <!--favorites#create--><!--いいねの保存を非同期通信-->
  <%= link_to book.favorites.count, book_favorites_path(book), method: :post, remote: true, class: "fas fa-heart heart_red" %>
<% end %>


